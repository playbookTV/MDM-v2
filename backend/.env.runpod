# RunPod Environment Configuration for Modomo AI Pipeline

# RunPod Configuration
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_endpoint_id_here
RUNPOD_POD_ID=your_pod_id_here

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST="8.0"  # For RTX 4090, A100, H100
CUDA_LAUNCH_BLOCKING=1

# Model Cache Configuration
TRANSFORMERS_CACHE=/workspace/models
TORCH_HUB_CACHE=/workspace/models
HF_HOME=/workspace/models
SENTENCE_TRANSFORMERS_HOME=/workspace/models

# AI Model Configuration
YOLO_MODEL=yolov8n.pt  # Start with nano, can upgrade to s/m/l/x
SAM_MODEL=sam_vit_h_4b8939.pth
DEPTH_MODEL=depth_anything_vitl14
CLIP_MODEL=ViT-B/32

# Performance Settings
BATCH_SIZE=1
NUM_WORKERS=2
MIXED_PRECISION=true
TORCH_BACKENDS_CUDNN_BENCHMARK=true

# Memory Optimization
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128
TORCH_CUDNN_V8_API_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

