# RunPod Configuration Template
# Copy this to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SECRET_KEY=your-service-role-key

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=modomo-datasets
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://pub-your-bucket-id.r2.dev

# RunPod AI Processing Configuration
RUNPOD_API_KEY=your-runpod-api-key
RUNPOD_ENDPOINT_ID=your-serverless-endpoint-id
RUNPOD_ENDPOINT_URL=https://your-custom-endpoint.runpod.net
RUNPOD_TIMEOUT=300
RUNPOD_MAX_RETRIES=2

# AI Processing Settings
AI_PROCESSING_ENABLED=true
USE_LOCAL_AI=false
AI_MODEL_CACHE_DIR=./models

# Production Settings
PRODUCTION=false
PORT=8000